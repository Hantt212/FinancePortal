@{
    ViewBag.Title = "Manage Expense Budgets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Toast Container -->
<div aria-live="polite" aria-atomic="true" class="position-relative">
    <div class="toast-container position-fixed" style="top: 20px; right: 20px; z-index: 1055;">
        <div class="toast" id="toastMessage" role="alert" aria-live="assertive" aria-atomic="true" data-delay="3000">
            <div class="toast-header">
                <div class="rounded mr-2" id="toastIcon" style="width: 15px; height: 15px;"></div>
                <strong class="mr-auto" id="toastTitle">Notification</strong>
                <small class="text-muted" id="toastTime">Just now</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body" id="toastBody"></div>
        </div>
    </div>
</div>

<div class="container pt-5" style="margin-top: 100px;">
    <h2 class="mb-4 font-weight-bold">Expense Budgets</h2>

    <div class="mb-3">
        <button class="btn btn-primary" data-toggle="modal" data-target="#addBudgetModal">
            <i class="fa fa-plus-circle"></i> Add New Budget
        </button>
    </div>

    <table class="table table-bordered table-striped" id="budgetTable">
        <thead class="thead-light">
            <tr>
                <th>Budget Name</th>
                <th>Amount</th>
                <th>Used</th>
                <th>Remaining</th>
                <th>Created Date</th>
                <th>Is Shown</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <!-- Filled via JS -->
        </tbody>
    </table>
</div>

<!-- Add Budget Modal -->
<div class="modal fade" id="addBudgetModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">

        <input type="hidden" id="editBudgetId" />

        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="budgetModalTitle">Add New Budget</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label>Budget Name</label>
                    <input type="text" id="newBudgetName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Amount</label>
                    <input type="text" id="newBudgetAmount" class="form-control" />
                </div>

                <div class="d-flex align-items-center gap-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="isRecurringBudget1">
                        <label class="form-check-label" for="isRecurringBudget1">Air Ticket</label>
                    </div>
                    <div class="form-check ml-4">
                        <input type="checkbox" class="form-check-input" id="isRecurringBudget2">
                        <label class="form-check-label" for="isRecurringBudget2">Hotel</label>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-3">
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input" id="isRecurringBudget1">
                        <label class="form-check-label" for="isRecurringBudget1">Meals</label>
                    </div>
                    <div class="form-check ml-4">
                        <input type="checkbox" class="form-check-input" id="isRecurringBudget2">
                        <label class="form-check-label" for="isRecurringBudget2">Others</label>
                    </div>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" id="saveBudgetBtn" class="btn btn-primary">Save</button>
            </div>
        </div>
    </div>
</div>

@section expenseBudgetScripts {
    <script src="@Url.Content("~/Assets/js/TravelExpense/expensebudget.js")"></script>
}
